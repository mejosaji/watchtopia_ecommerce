<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Edit Product</h2>
          <form
            action="/admin/edit_product/<%=editproduct._id %>"
            method="POST"
            name="myform"
            id="form"
            enctype="multipart/form-data"
          >
            <label for="">Prodcut Name</label>
            <input
              type="text"
              name="name"
              class="form-control"
              id="name"
              required=""
              value="<%=editproduct.productName%>"
            />
            <span id="name-error" class="validation-label"></span>
            <br />
            <label for="">Description</label>
            <input
              type="text"
              name="description"
              class="form-control"
              required=""
              id="description"
              value="<%=editproduct.description%>"
            />
            <span id="description-error" class="validation-label"></span>
            <br />
  
            <label for="">Price</label>
            <input
              type="text"
              name="price"
              class="form-control"
              id="price"
              required=""
              value="<%=editproduct.price%>"
            />
            <span id="price-error" class="validation-label"></span>
            <br />
            <label for="cars">Category</label>
  
            <select class="form-select" name="category" id="cars">
              <% procategory.forEach(function(procategory) { %>
              <option value="<%= procategory.categoryName%>">
                <%= procategory.categoryName%>
              </option>
              <% }) %>
            </select>
  
            <label for="">Quantity</label>
            <input
              type="text"
              name="quantity"
              class="form-control"
              id="quantity"
              required=""
              value="<%=editproduct. quantity%>"
            />
            <span id="quantity-error" class="validation-label"></span>
            <br />
            <label for="">Image</label>
           
           
              
          <img
            src="/uploads/<%=editproduct.image[0]%>"
            alt=""
            style="width: 100px; height: auto"
          />
          <img
            src="/uploads/<%=editproduct.image[1]%>"
            alt=""
            style="width: 100px; height: auto"
          />
          <img
            src="/uploads/<%=editproduct.image[2]%>"
            alt=""
            style="width: 100px; height: auto"
          />
          <img
            src="/uploads/<%=editproduct.image[3]%>"
            alt=""
            style="width: 100px; height: auto"
          />
          <input
            type="file"
            name="image1"
            value="<%=editproduct.image%>"
            class="form-control"
          />
          <input
            type="hidden"
            name="image1"
            value="<%=editproduct.image[0]%>"
          />
          <input
            type="file"
            name="image2"
            value="<%=editproduct.image%>"
            class="form-control"
          />
          <input
            type="hidden"
            name="image2"
            value="<%=editproduct.image[1]%>"
          />
          <input
            type="file"
            name="image3"
            value="<%=editproduct.image%>"
            class="form-control"
          />
          <input
            type="hidden"
            name="image3"
            value="<%=editproduct.image[2]%>"
          />
          <input
            type="file"
            name="image4"
            value="<%=editproduct.image%>"
            class="form-control"
          />
          <input
            type="hidden"
            name="image4"
            value="<%=editproduct.image[3]%>"
          />
           
  
            <button type="submit" class="btn btn-success mt-4">Submit</button>
          </form>
          <br />
          <br />
        </div>
      </div>
    </div>
  </section>
