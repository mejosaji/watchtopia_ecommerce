

<section style="margin-left: 20rem;">
    <div class="container" >
        <div class="d-flex justify-content-end  " >
        <a href="/admin/add_product" class="btn btn-success" style="margin-right: 7rem;"  >Add Product</a>
        </div>
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-hover mt-4">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Images</th>
                <th scope="col" class="text-center" colspan="2">Actions</th>
              </tr>
            </thead>
            <tbody>
                <% response.forEach(function(response,index) { %>
                    <tr>
                      <td><%=index+1 %></td>
                      <td><%=response.productName%></td>
                      <td><%=response.description%></td>
                      <td><%=response.price%></td>
                      <td><%=response.category%></td>
                      <td><%=response.quantity%></td>
      
                      <td>
                        <img
                          src="/uploads/<%= response.image[0] %>"
                          alt=""
                          style="width: 50px; height: 50px"
                          ;
                        />
                      </td>
                      <td>
                        <a
                        href="/admin/edit_product/<%= response._id %>"
                          class="btn btn-success"
                          >Edit</a

                        >
                        <% if (response.list){%><a
                          href="/admin/unlist_product/<%= response._id %>"
                          class="btn btn-danger"
                          >Unlist</a>
                        <%}else{%><a
                          href="/admin/list_product/<%= response._id %>"
                          class="btn btn-danger"
                          >list</a>
                            <%}%>
      
                      
                      </td>
                    </tr>
                    <% }) %>
              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</section>

<script>
  function deleteAlert(message) {
  return confirm(message);
}
</script>

